{
  "name": "kateglo-backend",
  "version": "2.0.0",
  "description": "Kateglo API Backend",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:production": "node scripts/start-production.js",
    "dev": "nodemon index.js",
    "test": "jest --no-cache --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.4.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "joi": "^17.13.3",
    "redis": "^4.7.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testTimeout": 10000,
    "forceExit": true,
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!__tests__/**",
      "!scripts/**",
      "!index.js",
      "!jest.setup.js"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      },
      "./config/*.js": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      },
      "./db/*.js": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      },
      "./middleware/*.js": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      },
      "./models/*.js": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      },
      "./routes/**/*.js": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      },
      "./services/*.js": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
  }
}
