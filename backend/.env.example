# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/kateglo
DB_POOL_MAX=8
DB_IDLE_TIMEOUT_MS=15000
DB_CONNECTION_TIMEOUT_MS=15000

# Redis (optional - untuk caching)
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true
CACHE_TTL_SECONDS=1800
CACHE_FALLBACK_MEMORY=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Google OAuth (frontend login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
FRONTEND_AUTH_CALLBACK_URL=http://localhost:5173/auth/callback

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
API_REQUIRE_ORIGIN=true

# Frontend shared key (opsional, untuk gate tambahan)
API_REQUIRE_FRONTEND_KEY=false
FRONTEND_SHARED_KEY=change-this-shared-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PUBLIC_MAX=180
RATE_LIMIT_SEARCH_MAX=60
PUBLIC_MAX_OFFSET=1000

# Proxy (Render/Reverse Proxy)
TRUST_PROXY=true
