# Server
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/kateglo
DB_POOL_MAX=8
DB_IDLE_TIMEOUT_MS=15000
DB_CONNECTION_TIMEOUT_MS=15000

# Redis (optional - untuk caching)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
API_REQUIRE_ORIGIN=true

# Frontend shared key (opsional, untuk gate tambahan)
API_REQUIRE_FRONTEND_KEY=false
FRONTEND_SHARED_KEY=change-this-shared-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
KBBI_BASE_URL=https://kbbi.kemdikbud.go.id
KBBI_TIMEOUT=15000
